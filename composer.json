{
  "name": "stackonet/stackonet-support-ticket",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Stackonet Services (Pvt.) Ltd.",
      "email": "info@stackonet.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2 || ^8.0",
    "ext-json": "*",
    "stackonet/wp-helpers": "^1.9.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "roots/wordpress": "^5.9",
    "wp-phpunit/wp-phpunit": "^5.9",
    "yoast/phpunit-polyfills": "^1.0",
    "squizlabs/php_codesniffer": "^3.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "wp-coding-standards/wpcs": "*"
  },
  "autoload": {
    "psr-4": {
      "StackonetSupportTicket\\": "includes"
    }
  },
  "scripts": {
    "make-pot": "wp i18n make-pot . languages/stackonet-support-ticket.pot",
    "test": "phpunit",
    "lint": "phpcs --standard=phpcs.xml",
    "format": "phpcbf --standard=phpcs.xml"
  }
}
